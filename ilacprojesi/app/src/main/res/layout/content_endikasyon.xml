<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scaleType="fitXY"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ilac.prospektus.ilacprojesi.endikasyonActivity"
    tools:showIn="@layout/app_bar_endikasyon">


    <SearchView
        android:id="@+id/searchView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:queryHint="Etken madde giriniz..." />


    <ListView
        android:id="@+id/ilaclar_ListViewEndikasyon"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchView1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textviewMadde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView1"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Burada seÃ§ilen etken madde yazacak"
        android:textStyle="bold"
        android:visibility="invisible" />


    <ListView
        android:id="@+id/ilaclar_ListView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textviewMadde"
        android:layout_marginTop="24dp"
        android:visibility="invisible" />

</RelativeLayout>