<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scaleType="fitXY"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ilac.prospektus.ilacprojesi.endikasyonActivity"
    tools:showIn="@layout/app_bar_endikasyon">


    <SearchView
        android:id="@+id/searchEndikasyon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:queryHint="Endikasyon bilgisi giriniz..." />



    <TextView
        android:id="@+id/textviewEndikasyon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchEndikasyon"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Endikasyon bilgisi giriniz..."
        android:textColor="@color/text_color"
        android:visibility="visible" />


    <ListView
        android:id="@+id/ilaclar_ListViewAd"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textviewEndikasyon"
        android:layout_marginTop="24dp"
        android:visibility="invisible" />

</RelativeLayout>